<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.utn.ddam.clase03.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/toNewUser"
            app:destination="@id/newUserFragment"
            app:enterAnim="@anim/fragment_fade_enter" />
        <action
            android:id="@+id/toListUsers"
            app:destination="@id/listUserFragment" />
    </fragment>
    <fragment
        android:id="@+id/newUserFragment"
        android:name="com.utn.ddam.clase03.fragments.NewUserFragment"
        android:label="fragment_new_user"
        tools:layout="@layout/fragment_new_user" />
    <fragment
        android:id="@+id/listUserFragment"
        android:name="com.utn.ddam.clase03.fragments.ListUserFragment"
        android:label="fragment_list_user"
        tools:layout="@layout/fragment_list_user" />
</navigation>